.scroll-view_H {
  width: 500px;
  height: 492px;
  overflow-x: scroll;
  display: flex;
}
.page18-wrap {
  min-height: 100vh;
  background-image: url(https://datastream.affectai.cn/callmaterial/images/page20-1024/img5.png);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  position: relative;
  background-color: beige;
}
.gold {
  height: 40px;
  width: 110px;
  border: 2px solid #da9424;
  background-color: rgba(205, 211, 169, 0.8);
  border-radius: 20px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10px;
}
